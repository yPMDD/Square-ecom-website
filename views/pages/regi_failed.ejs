*{
font-family: 'poppins',sans-serif;

}
body{
    background-color: 	#f8f8f8;
    display: grid;
    place-items: center;
    transform: translate(0px,-80px);
    height: 100vh;
    
}
.box{
    display: grid;
    place-items: center;
    background-color: #f1f4f8 ; 
    height: 200px;
    width: 300px;
    border-radius: 30px;
    box-shadow: 0 5px  15px  gray;
}
.box button {
    border:none;
    transform: translate(0px,-20px);
    border-radius: 40px;
    outline: 2px solid rgba(255, 255, 255, .2);
    height: 46px;
    width:150px ;
    color:#fff;
    background-color: rgb(67, 67, 233);
    font-family: "poppins",sans-serif;
    font-weight: bolder;
    box-shadow: 0 4px 8px grey;
}
.box button:hover{
    border:none;
    
    
    border-radius: 40px;
    outline: 2px solid rgb(15, 15, 136);
    height: 46px;
    width:150px ;
    color:#fff;
    background-color: rgb(15, 15, 136);
    font-family: "poppins",sans-serif;
    font-weight: bolder;
    transition: .2s;
    
    }
    .box button:active{
        outline: 2px solid rgb(15, 15, 136);
        background-color: rgb(255, 255, 255);
    }
